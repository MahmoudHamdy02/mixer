BasedOnStyle: Google
UseTab: Never
IndentWidth: 4
TabWidth: 4
AllowShortFunctionsOnASingleLine: Empty
ColumnLimit: 120
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterControlStatement: false      # if, for, while — braces stay on the same line
  AfterEnum: false
  AfterFunction: true               # function definitions — brace on new line
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false
AccessModifierOffset: -4
AllowShortIfStatementsOnASingleLine: false
